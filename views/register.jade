extends layout

block content
	div.container
		form.form-signin(role='form', action="/register",method="post", style='max-width: 550px;')
			h3.glow Sign Up Chat Room
			input.form-control(type='text', name="name", placeholder='Full Name')
			input.form-control(type='text', name="username", placeholder='Nickname')
			input.form-control(type='text', name="email", placeholder='Em@ail')
			input.form-control(type='password', name="password", placeholder='Password')
			select.form-control(name="role")
				option User
				option Administrator
			hr
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign Up